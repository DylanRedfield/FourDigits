<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.dylanredfield.fourdigits">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".FourDigits">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".SelectFriendsActivity"
            android:label="@string/select_friends"></activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/vs_computer"></activity>
        <activity
            android:name=".SelectGameActivity"
            android:label="@string/game_type"></activity>
        <activity
            android:name=".CreateAccountActivity"
            android:label="@string/game_type"></activity>
    </application>

</manifest>
